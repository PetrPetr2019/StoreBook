@model Book[]

@{
    ViewData["Title"] = "Результаты поиска";
}

    <h1 style="color: green">Результаты поиска</h1>


       @if (Model.Length == 0)
       {
           <p>Ничего не найденно</p>
       }
       else
       {
           <ul>
               @foreach (var book in Model)
               {
                   <li><a href="@Url.Action("Index", "Book", new {id = book.Id})">@book.Title</a></li>
               }
           </ul>
       }